{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "esnext",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "dist",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true

   },
   "include": [
      "./*.js",
      "src/**/*.ts",
      "api/**/*.ts",
   ]
}